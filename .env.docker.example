# ==============================================
# DevTrack - Docker Environment Configuration
# ==============================================
# Copia este archivo a .env.docker y configura los valores

# ==============================================
# Django Settings
# ==============================================
DJANGO_SECRET_KEY=tu-secret-key-aqui-genera-con-comando-del-readme
DJANGO_DEBUG=True
DJANGO_SETTINGS_MODULE=config.settings
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ==============================================
# Database Configuration (MySQL)
# ==============================================
DB_NAME=devtrack
DB_USER=devtrack
DB_PASSWORD=devtrack_password
DB_ROOT_PASSWORD=root_password
DB_HOST=db
DB_PORT=3306

# ==============================================
# CORS Configuration
# ==============================================
# Para desarrollo incluir ambos puertos
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://127.0.0.1:5173,http://127.0.0.1:80

# ==============================================
# URLs Configuration
# ==============================================
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ==============================================
# Email Configuration
# ==============================================
# Usa console backend para desarrollo (emails en logs)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para producción, configura SMTP (ejemplo Gmail):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=tu-email@gmail.com
# EMAIL_HOST_PASSWORD=tu-app-password-de-gmail
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=DevTrack <tu-email@gmail.com>

# ==============================================
# Cloudflare Turnstile (CAPTCHA)
# ==============================================
# Claves de prueba (funcionan en localhost)
TURNSTILE_SECRET_KEY=changeme
VITE_TURNSTILE_SITE_KEY=0x4AAAAAAB195XyO5y089iC-

# Para producción, obtén tus propias claves en:
# https://developers.cloudflare.com/turnstile/

# ==============================================
# Port Mapping (Docker Compose)
# ==============================================
# Estos puertos mapean contenedor:host
BACKEND_PORT=8000
FRONTEND_PORT=5173
DB_PORT=3306

# ==============================================
# Development vs Production
# ==============================================
# Cambia estos valores según el entorno
ENVIRONMENT=development
# ENVIRONMENT=production
